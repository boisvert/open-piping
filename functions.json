{
    "gui": {
        "Number value": {"args": 0, "blockCode":"<form><input type='text' /><form>", "getExp": "var inpt = block.find('form > input')[0]; return Number(inpt.value);"},
        "plus": {"args": 2},
        "minus":{"args": 2},
        "times": {"args": 2},
        "lt": {"args": 2},
        "pythagoras": {"args": 2},
        "sqrt": {"args":1},
        "if": {"args":3}
    },
    "js": {
        "pythagoras": {"args": "a,b", "body": "return sqrt(a*a+b*b);", "requires":["sqrt"]},
        "sqrt": {"args":"a", "body": "return Math.sqrt(a);"}
    },
    "replace": {
        "if": {"args": "a,b,c", "js": "@a?@b:@c"},
        "plus": {"args": "a,b", "js": "(@a+@b)"},
        "minus": {"args": "a,b", "js": "(@a-@b)"},
        "times": {"args": "a,b", "js": "@a*@b"},
        "divide": {"args": "a,b", "js": "@a/@b"},
        "equals": {"args": "a,b", "js": "(@a==@b)"},
        "lt": {"args": "a,b", "js": "(@a<@b)"},
        "mt": {"args": "a,b", "js": "(@a>@b)"}
    }
}
