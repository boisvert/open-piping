{
    "gui": {
        "Number value": {"args": 0, "blockCode":"<form><input type='text' /><form>", "getExp": "var inpt = block.find('form > input')[0]; return Number(inpt.value);"},
        "String value": {"args": 0, "blockCode":"<form><input type='text' /><form>", "getExp": "var inpt = block.find('form > input')[0]; return inpt.value;"},
        "JSON value": {"args": 0, "blockCode":"<form><input type='text' /><form>", "getExp": "var inpt = block.find('form > input')[0]; return JSON.parse(inpt.value);"},
        "plus": {"args": 2, "group": "arithmetic"},
        "minus": {"args": 2, "group": "arithmetic"},
        "times": {"args": 2, "group": "arithmetic"},
        "divide": {"args": 2, "group": "arithmetic"},
        "lt": {"args": 2, "group": "comparison"},
        "mt": {"args": 2, "group": "comparison"},
        "equals": {"args": 2, "group": "comparison"},
        "if": {"args":3},
        "setq": {"args":1},
        "isNumber": {"args":1, "group":"type check"},
        "isString": {"args":1, "group":"type check"},
        "isArray": {"args":1, "group":"type check"},
        "isNull": {"args": 1, "group":"type check"},
        "or": {"args": 2, "group": "logic"},
        "and": {"args": 2, "group": "logic"}
    }, 
    "js": {
        "isNumber": {"args": "n", "body": "return $.isNumeric(n);"},
        "isString": {"args": "s", "body": "return (typeof s === 'string' || s instanceof String);"},
        "isArray": {"args": "a", "body": "return $.isArray(a);"},
        "isNull": {"args": "x", "body": "return x==null;"}
    },
    "php": {
        "pythagoras": {"args": "$a,$b", "body": "return sqrt($a*$a+$b*$b);"}
    },
    "replace": {
        "if": {"args": "a,b,c", "js": "@a?@b:@c", "php":"@a?@b:@c"},
        "plus": {"args": "a,b", "js": "(@a+@b)", "php":"(@a+@b)"},
        "minus": {"args": "a,b", "js": "(@a-@b)", "php":"(@a-@b)"},
        "times": {"args": "a,b", "js": "@a*@b", "php":"(@a*@b)"},
        "divide": {"args": "a,b", "js": "@a/@b", "php":"(@a/@b)"},
        "equals": {"args": "a,b", "js": "(@a===@b)", "php":"(@a===@b)"},
        "lt": {"args": "a,b", "js": "(@a<@b)", "php":"(@a<@b)"},
        "mt": {"args": "a,b", "js": "(@a>@b)", "php":"(@a>@b)"},
        "or": {"args": "a,b", "js": "(@a||@b)", "php":"(@a||@b)"},
        "and": {"args": "a,b", "js": "(@a&&@b)", "php":"(@a&&@b)"}
    }
}

